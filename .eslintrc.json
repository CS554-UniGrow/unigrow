{
  "extends": "next/core-web-vitals",
  "rules": {
    // override default options
    "comma-dangle": [
      "error"
    ],
    "indent": [
      "error",
      2
    ],
    "no-cond-assign": [
      "error",
      "always"
    ],
    // disable now, but enable in the future
    "one-var": "off", // ["error", "never"]
    // disable
    "init-declarations": "off",
    "no-console": "off",
    "no-inline-comments": "off"
  }
}